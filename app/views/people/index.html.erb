<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Contact info</th>
      <th>Person desc</th>
      <th>Role</th>
      <th>Social info</th>
      <th>Email</th>
      <th>Skills</th>
      <th>Work history</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.contact_info %></td>
        <td><%= person.person_desc %></td>
        <td><%= person.role %></td>
        <td><%= person.social_info %></td>
        <td><%= person.email %></td>
        <td><%= person.skills %></td>
        <td><%= person.work_history %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

